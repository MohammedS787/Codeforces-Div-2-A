#include <bits/stdc++.h>
using namespace std;
#define endl '\n'
#define ll long long
#define loop(i, n) for (int i = 0; (int)i < n; i++)
#define vi vector<int>
#define range(v) (v.begin(), v.end())
#define io                        \
    ios_base::sync_with_stdio(0); \
    cin.tie(0);                   \
    cout.tie(0);
//---------------------------------------------------------//

int main(void)
{
    io string str;
    getline(cin, str);
    set<char> st;
    loop(i, str.size())
    {
        if (islower(str[i]))
        {
            st.insert(str[i]);
        }
    }
    cout << st.size() << endl;
}
